{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],

  "bracketSpacing": true,
  "trailingComma": "es5",
  "arrowParens": "always",
  "singleQuote": false,
  "quoteProps": "consistent",
  "endOfLine": "lf",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true
}
